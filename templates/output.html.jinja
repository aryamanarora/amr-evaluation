<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Results</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- bootstrap -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <script defer src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>
        <style>
        </style>
    </head>
    <body>
        <main class="mr-5 ml-5 mt-5">
            <h1>Roles</h1>
            <table class="table table-striped">
                <tr>
                    <th scope="col">Metric</th>
                    <th style="text-align:right" scope="col">Intersection</th>
                    <th style="text-align:right" scope="col">Pred</th>
                    <th style="text-align:right" scope="col">Gold</th>
                    <th style="text-align:right" scope="col">Precision</th>
                    <th style="text-align:right" scope="col">Recall</th>
                    <th style="text-align:right" scope="col">F1</th>
                </tr>
                {% for metric in roles %}
                <tr>
                    <th scope="row">{{ metric.name }}{% if metric.note %}
                    <br>
                    <span class="small">{{ metric.note }}</span>
                    {% else %}
                    {% endif %}</th>
                    <td style="text-align:right">{{ metric.inter }}</td>
                    <td style="text-align:right">{{ metric.pred }}</td>
                    <td style="text-align:right">{{ metric.gold }}</td>
                    <td style="text-align:right">{{ "%.3f"|format(metric.pr) }}</td>
                    <td style="text-align:right">{{ "%.3f"|format(metric.rc) }}</td>
                    <td style="text-align:right">{{ "%.3f"|format(metric.f1) }}</td>
                </tr>
                {% endfor %}
            </table>
            <h1>Concepts</h1>
            <table class="table table-striped">
                <tr>
                    <th scope="col">Metric</th>
                    <th style="text-align:right" scope="col">Intersection</th>
                    <th style="text-align:right" scope="col">Pred</th>
                    <th style="text-align:right" scope="col">Gold</th>
                    <th style="text-align:right" scope="col">Precision</th>
                    <th style="text-align:right" scope="col">Recall</th>
                    <th style="text-align:right" scope="col">F1</th>
                </tr>
                {% for metric in concepts %}
                <tr>
                    <th scope="row">{{ metric.name }}</th>
                    <td style="text-align:right">{{ metric.inter }}</td>
                    <td style="text-align:right">{{ metric.pred }}</td>
                    <td style="text-align:right">{{ metric.gold }}</td>
                    <td style="text-align:right">{{ "%.3f"|format(metric.pr) }}</td>
                    <td style="text-align:right">{{ "%.3f"|format(metric.rc) }}</td>
                    <td style="text-align:right">{{ "%.3f"|format(metric.f1) }}</td>
                </tr>
                {% endfor %}
            </table>
        </main>
    </body>
</htmL>